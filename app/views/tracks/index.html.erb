<h1 class="page-header">Tracks and Track Courses</h1>

<table class="table">
  <thead>
    <tr>
      <th>Track name</th>
      <th>Course count</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= track.track_name %></td>
        <td><%= track.course_count %></td>
        <td><%= link_to 'Show', track %></td>
        <td><%= link_to 'Edit', edit_track_path(track) %></td>
        <td><%= link_to 'Destroy', track, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table class="table">
  <thead>
    <tr>
      <th>Course Name</th>
      <th>Track Name</th>
      <th>Course Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @track_courses.each do |track_course| %>
      <tr>
        <td><%= track_course.course_name %></td>
        <td><%= track_course.track_name %></td>
        <td><%= track_course.course_order %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Track', new_track_path %>
