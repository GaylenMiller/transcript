
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="page-header">
      <h1>Courses</h1>
    </div>

    <table class="table table-condensed" >
      <thead>
        <tr>
          <th>Course Name</th>
          <th class="text-center">Stages</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @courses.each do |course| %>
          <tr>
            <td><%= link_to course.course_name, edit_course_path(course) %></td>
            <td class="text-center"><%= course.stage_count %></td>
            <td><%= link_to course, method: :delete, data: { confirm: 'Are you sure?' } do %>
              <span class="glyphicon glyphicon-remove"></span>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to new_course_path do %>
    <span class="badge"><span class="glyphicon glyphicon-plus"></span></span> New Course
    <% end %>
    <br><br>
  </div>
</div>


